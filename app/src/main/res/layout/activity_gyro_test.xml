<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cjmaier2_dkturne2.sensingapp.GyroTest">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/axisxaccel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="86dp"
        android:focusable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/axisyaccel"
        android:layout_below="@+id/axisxaccel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/axiszaccel"
        android:layout_below="@+id/axisyaccel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="X AXIS"
        android:id="@+id/xlabel"
        android:layout_alignBottom="@+id/axisxaccel"
        android:layout_toRightOf="@+id/axisxaccel"
        android:layout_toEndOf="@+id/axisxaccel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Y AXIS"
        android:id="@+id/ylabel"
        android:layout_alignBottom="@+id/axisyaccel"
        android:layout_toRightOf="@+id/axisyaccel"
        android:layout_toEndOf="@+id/axisyaccel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Z AXIS"
        android:id="@+id/zlabel"
        android:layout_alignBottom="@+id/axiszaccel"
        android:layout_toRightOf="@+id/axiszaccel"
        android:layout_toEndOf="@+id/axiszaccel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gyro Outputs"
        android:id="@+id/gyrotesttitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
