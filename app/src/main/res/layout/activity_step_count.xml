<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="cjmaier2_dkturne2.sensingapp.StepCount"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    android:layout_alignParentStart="false"
    android:layout_alignParentEnd="false"
    android:layout_centerHorizontal="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAlignment="center"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Step Count"
            android:id="@+id/stepcounttitle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:focusable="false"
            android:ems="10"
            android:id="@+id/numSteps"
            android:layout_below="@id/stepcounttitle"
            android:gravity="center"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Displacement (ft)"
            android:id="@+id/displacement_title"
            android:layout_below="@id/numSteps"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:focusable="false"
            android:ems="10"
            android:id="@+id/numFeet"
            android:layout_below="@id/displacement_title"
            android:gravity="center"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Current Rotation (degrees)"
            android:id="@+id/rotation_title"
            android:layout_below="@id/numFeet"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:focusable="false"
            android:ems="10"
            android:id="@+id/numDegrees"
            android:layout_below="@id/rotation_title"
            android:gravity="center"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total Rotation (degrees)"
            android:id="@+id/total_rotation_title"
            android:layout_below="@id/numDegrees"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:focusable="false"
            android:ems="10"
            android:id="@+id/totalNumDegrees"
            android:layout_below="@id/total_rotation_title"
            android:gravity="center"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:onClick="resetCount"
            android:id="@+id/resetbutton"
            android:layout_below="@+id/totalNumDegrees"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:focusable="false"
            android:ems="10"
            android:id="@+id/tmp"
            android:layout_below="@id/resetbutton"
            android:gravity="center"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:focusable="false"
            android:ems="10"
            android:id="@+id/tmp1"
            android:layout_below="@id/tmp"
            android:gravity="center"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:focusable="false"
            android:ems="10"
            android:id="@+id/tmp2"
            android:layout_below="@id/tmp1"
            android:gravity="center"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:focusable="false"
            android:ems="10"
            android:id="@+id/tmp3"
            android:layout_below="@id/tmp2"
            android:gravity="center"
            android:layout_centerHorizontal="true" />
    </LinearLayout>
</ScrollView>